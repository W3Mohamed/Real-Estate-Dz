                            <div>
                                <h3 class="text-lg font-semibold mb-2 flex items-center">
                                    <i class="fab fa-instagram text-purple-600 mr-2"></i> Instagram
                                </h3>
                                <div class="aspect-w-16 aspect-h-9">
                                    {{bien.insta|raw}}
                                </div>
                            </div>
                            <div>
                                <h3 class="text-lg font-semibold mb-2 flex items-center">
                                    <i class="fab fa-tiktok text-black mr-2"></i> TikTok
