{% extends 'base.html.twig' %}

{% block title %}ElWakil - Nos biens immobiliers{% endblock %}

{% block body %}
<!-- Barre de recherche et filtres -->
<section class="py-8 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="bg-white rounded-xl shadow-md p-6 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Rechercher un bien</h2>
            
            <form class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <!-- Type de transaction -->
                <div>
                    <label class="block text-gray-700 font-medium mb-2">Transaction</label>
                    <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500">
                        <option value="">Tous</option>
                        <option value="vente">À vendre</option>
                        <option value="location">À louer</option>
                    </select>
                </div>
                
                <!-- Type de bien -->
                <div>
                    <label class="block text-gray-700 font-medium mb-2">Type de bien</label>
                    <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500">
                        <option value="">Tous</option>
                        <option value="villa">Villa</option>
                        <option value="appartement">Appartement</option>
                        <option value="terrain">Terrain</option>
                        <option value="local">Local commercial</option>
                    </select>
                </div>
                
                <!-- Wilaya -->
                <div>
                    <label class="block text-gray-700 font-medium mb-2">Wilaya</label>
                    <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500">
                        <option value="">Toutes</option>
                        <option value="alger">Alger</option>
                        <option value="blida">Blida</option>
                        <option value="oran">Oran</option>
                        <option value="constantine">Constantine</option>
                    </select>
                </div>
                
                <!-- Commune -->
                <div>
                    <label class="block text-gray-700 font-medium mb-2">Commune</label>
                    <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500">
                        <option value="">Toutes</option>
                        <option value="hydra">Hydra</option>
                        <option value="el-biar">El Biar</option>
                        <option value="ben-aknoun">Ben Aknoun</option>
                    </select>
                </div>
                
                <!-- Prix range -->
                <div class="md:col-span-2">
                    <label class="block text-gray-700 font-medium mb-2">Prix (DZD)</label>
                    <div class="flex items-center space-x-4">
                        <input type="number" placeholder="Min" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500">
                        <span class="text-gray-500">à</span>
                        <input type="number" placeholder="Max" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500">
                    </div>
                </div>
                
                <!-- Superficie -->
                <div class="md:col-span-2">
                    <label class="block text-gray-700 font-medium mb-2">Superficie (m²)</label>
                    <div class="flex items-center space-x-4">
                        <input type="number" placeholder="Min" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500">
                        <span class="text-gray-500">à</span>
                        <input type="number" placeholder="Max" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500">
                    </div>
                </div>
                
                <!-- Boutons -->
                <div class="md:col-span-2 flex items-end space-x-4">
                    <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-3 px-6 rounded-lg transition duration-300">
                        <i class="fas fa-search mr-2"></i> Rechercher
                    </button>
                    <button type="reset" class="border border-gray-300 hover:bg-gray-100 text-gray-700 font-bold py-3 px-6 rounded-lg transition duration-300">
                        Réinitialiser
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

